{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
